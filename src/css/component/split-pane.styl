.resizer {
  z-index: 1
  display: block
  flex-basis: 1px
  flex-grow: 0
  flex-shrink: 0
  background-clip: padding-box

  &:global(.horizontal) {
    margin-top: -5px
    margin-bottom: -6px
    border-top: solid 5px rgba(black, 0)
    border-bottom: solid 5px rgba(black, 0)
    background-color: rgba(black, 0.15)
    cursor: row-resize
  }

  &:global(.vertical) {
    margin-right: -6px
    margin-left: -5px
    border-right: solid 5px rgba(black, 0)
    border-left: solid 5px rgba(black, 0)
    background-color: rgba(black, 0.15)
    cursor: col-resize
  }

  &:global(.disabled) {
    cursor: not-allowed
  }
}
