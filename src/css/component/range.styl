.element {
  position: relative
  display: flex
  flex-direction: row
  align-items: center
  margin: 0.5rem

  &:before {
    content: '\200c';  // For baseline alignment
  }
}

.range {
  flex-grow: 1
  flex-shrink: 1
  align-self: stretch
  appearance: none
  outline: none
  margin: 0
  margin-right: 0.5rem

  &::-webkit-slider-runnable-track {
    appearance: none
    height: 0.2rem
    border-radius: 0.2rem
    background-color: rgba(black, 0.33)
  }

  &::-webkit-slider-thumb {
    appearance: none
    width: 1rem
    height: 1rem
    margin-top: calc(2px - 0.5rem)
    border: none
    border-radius: 1rem
    box-shadow: 0 0 0 1px rgba(black, 0.15)
    background-color: white
    transition: background-color 0.1s ease, box-shadow 0.1s ease
  }

  &:focus::-webkit-slider-thumb {
    box-shadow: 0 0 0 1px rgba(black, 0.1), 0 0 0 4px rgba(black, 0.2)
  }

  &:active::-webkit-slider-thumb {
    background-color: mix(black, white, 15%)
    box-shadow: 0 0 0 1px rgba(black, 0.2), 0 0 0 4px rgba(black, 0.2)
  }
}

.number {
  flex-basis: 4rem
  appearance: none
  outline: none
  box-sizing: border-box
  width: 100%
  margin: 0
  padding: 0.3rem
  border: none
  border-radius: 0.2rem
  box-shadow: 0 0 0 1px rgba(black, 0.1)
  color: black
  background-color: white
  font-size: inherit
  transition: background-color 0.1s ease, box-shadow 0.1s ease

  &:focus {
    box-shadow: 0 0 0 1px rgba(black, 0.1), 0 0 0 4px rgba(black, 0.2)
  }
}
