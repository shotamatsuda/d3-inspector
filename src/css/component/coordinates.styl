.element {
  position: relative
  display: flex
  flex-direction: row
  align-items: center
  margin: 0.5rem
  margin-bottom: 0
}

.label {
  display: flex
  flex-direction: column
  align-items: center
  flex-grow: 1
  flex-shrink: 1
  flex-basis: 0
  margin-left: 0.5rem

  &:first-child {
    margin-left: 0
  }
}

.name {
  color: rgba(black, 0.25)
  font-size: 80%
  font-weight: bold
}

.input {
  flex-grow: 1
  flex-shrink: 1
  flex-basis: 0
  appearance: none
  outline: none
  box-sizing: border-box
  width: 100%
  margin: 0
  margin-bottom: 0.1rem
  padding: 0.3rem
  border: none
  border-radius: 0.2rem
  box-shadow: 0 0 0 1px rgba(black, 0.1)
  color: black
  background-color: white
  font-size: inherit
  transition: background-color 0.1s ease, box-shadow 0.1s ease

  &:focus {
    box-shadow: 0 0 0 1px rgba(black, 0.1), 0 0 0 4px rgba(black, 0.2)
  }
}
