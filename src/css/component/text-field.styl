.element {
  margin: 0.5rem
}

.input {
  appearance: none
  outline: none
  box-sizing: border-box
  width: 100%
  margin: 0
  padding: 0.3rem
  border: none
  border-radius: 0.2rem
  box-shadow: 0 0 0 1px rgba(black, 0.1)
  color: black
  background-color: white
  font-size: inherit
  transition: background-color 0.1s ease, box-shadow 0.1s ease

  &:focus {
    box-shadow: 0 0 0 1px rgba(black, 0.1), 0 0 0 4px rgba(black, 0.2)
  }
}
