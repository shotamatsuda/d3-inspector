.element {
  position: absolute
  top: 1rem
  left: 1rem
  width: 20rem
  padding: 1rem
  border-radius: 0.5rem
  box-shadow: 0 0 0 1px rgba(black, 0.05)
  background-color: #fafafa
  user-select: none

  *::selection {
    background-color: #cccccc
  }
}

.item {
  display: flex
  flex-direction: row
  align-items: baseline
  padding-left: 0.5rem
}

.itemTitle {
  flex-grow: 0
  flex-shrink: 0
  flex-basis: 25%
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
}

.itemContent {
  flex-grow: 1
  flex-shrink: 1
}

.group {
  & + & {
    &:before {
      content: ''
      display: block
      height: 1px
      margin: 1rem -1rem
      background-color: rgba(black, 0.1)
    }
  }
}

.groupTitle {
  margin-bottom: 0.5rem
  padding-left: 0.5rem
  color: rgba(black, 0.33)
  font-weight: bold
  text-transform: uppercase
}
