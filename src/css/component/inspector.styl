.element {
  overflow: scroll
  padding: 1rem
  background-color: #fafafa
  user-select: none
  box-sizing: border-box
  height: 100%

  *::selection {
    background-color: #cccccc
  }

  &__floating {
    position: absolute
    width: 25rem
    height: auto
    max-height: calc(100% - 2rem)
    border-radius: 0.5rem
    box-shadow: 0 0 0 1px rgba(black, 0.05)
  }

  &__floating&__topLeft {
    top: 1rem
    left: 1rem
  }

  &__floating&__topRight {
    top: 1rem
    right: 1rem
  }

  &__floating&__bottomRight {
    right: 1rem
    bottom: 1rem
  }

  &__floating&__bottomLeft {
    bottom: 1rem
    left: 1rem
  }
}

.item {
  display: flex
  flex-direction: row
  align-items: baseline
  padding-left: 0.5rem
}

.itemTitle {
  flex-grow: 0
  flex-shrink: 0
  flex-basis: 25%
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
}

.itemContent {
  flex-grow: 1
  flex-shrink: 1
}

.group {
  & + & {
    &:before {
      content: ''
      display: block
      height: 1px
      margin: 1rem -1rem
      background-color: rgba(black, 0.1)
    }
  }
}

.groupTitle {
  margin-bottom: 0.5rem
  padding-left: 0.5rem
  color: rgba(black, 0.33)
  font-weight: bold
  text-transform: uppercase
}
